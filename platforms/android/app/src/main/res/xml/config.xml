<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kinghoddy.skychat" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>skychat</name>
    <description>
          A blasing fast  social media by kinghoddy
    </description>
    <author email="odunmilade@gmail.com" href="http://hoddy.netlify.com">
Noel odunmilade sogbuyi
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash src="res/logo/skychat_bg.jpg" />
    <icon src="res/logo/logo_red.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
    <preference name="android-minSdkVersion" value="19" />
</widget>
